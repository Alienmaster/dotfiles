alias cd..='cd ..'
alias ..='cd ..'
alias lsl='ls -lah'
alias µ='cd ..'
alias µµ='cd ../..'
alias µµµ='cd ../../..'
alias µµµµ='cd ../../../..'

# htop
alias gtop='htop -u $(whoami)'

# gpu
alias gpustati='gpustat -i 2'

# tmux
alias ptop='tmux split-window -v -l 43 "htop -u $(whoami)" && gpustati'

# git
alias gpr='git pull --rebase'

# docker
alias dps='docker ps | grep'
